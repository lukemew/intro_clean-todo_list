{
  "name": "intro-clean",
  "version": "0.0.0",
  "type": "module",
  "description": "Clean architecture intro.",
  "main": "src/main.js",
  "scripts": {
    "dev": "node --env-file=.env --import tsx --watch src/main.ts",
    "build": "tsc -p tsconfig.build.json && tsc-alias",
    "start": "node dist/main.js",
    "test": "NODE_ENV=test vitest run",
    "test:app": "NODE_ENV=test vitest run app",
    "test:integration": "NODE_ENV=test vitest run integration",
    "migration:create": "typeorm migration:create",
    "migration:run": "tsx --env-file .env node_modules/typeorm/cli.js -d src/infra/database/typeorm/data-source.ts migration:run",
    "migration:run:prod": "node_modules/typeorm/cli.js -d dist/infra/database/typeorm/data-source.js migration:run",
    "migration:revert": "tsx --env-file .env node_modules/typeorm/cli.js -d src/infra/database/typeorm/data-source.ts migration:revert"
  },
  "keywords": [
    "clean",
    "ts",
    "api"
  ],
  "author": "Jo√£o Pedro Holanda Neves",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^24.9.1",
    "@types/uuid": "^10.0.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.6"
  },
  "dependencies": {
    "@faker-js/faker": "^10.1.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/jwt": "^10.0.0",
    "bcrypt": "^6.0.0",
    "fastify": "^5.6.1",
    "fastify-type-provider-zod": "^6.1.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.27",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  }
}
